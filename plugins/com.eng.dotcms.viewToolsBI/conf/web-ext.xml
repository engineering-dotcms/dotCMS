<!-- Filtro da impostare come primo, prima del CharsetEncodingFilter -->
<filter>
	<filter-name>LanguageFilter</filter-name>
	<filter-class>it.bankit.website.filter.LanguageCookieFilter</filter-class>
</filter>

<filter>
        <filter-name>LinkMapFilter</filter-name>
        <filter-class>it.bankit.website.filter.LinkMapFilter</filter-class>
</filter>

<filter-mapping>
	<filter-name>UrlRewriteFilter</filter-name>
	<url-pattern>/*</url-pattern>
	<dispatcher>REQUEST</dispatcher>
</filter-mapping>

<filter-mapping>
	<filter-name>LinkMapFilter</filter-name>
	<url-pattern>/*</url-pattern>
</filter-mapping>

<filter-mapping>
	<filter-name>LanguageFilter</filter-name>
	<url-pattern>*.html</url-pattern>
</filter-mapping>
<filter-mapping>
	<filter-name>LanguageFilter</filter-name>
	<url-pattern>*.jsp</url-pattern>
</filter-mapping>
