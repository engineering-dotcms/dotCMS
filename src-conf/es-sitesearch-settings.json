{
  "analysis": {
    "filter": {
      "content_ngrams": {
        "side": "front",
        "max_gram": 10,
        "min_gram": 1,
        "type": "edgeNGram"
      },
      "content_stemmer": {
        "type" : "stemmer",
        "name" : "english"
      },     
      "delimiter_filter" : {
		"type" : "word_delimiter",
        "catenate_all" : true,
        "catenate_numbers" : true,
        "catenate_words" : true,
		"generate_word_parts" : true,
        "generate_number_parts" : true,
        "preserve_original" : true,
        "split_on_case_change" : true,
        "split_on_numerics" : true,
        "stem_english_possessive" : true
      },
      "translation" : {
      	"type" : "nGram",
      	"min_gram" : "1",
      	"max_gram" : "10"
      }
    },
    "analyzer": {
      "standard_content": {
        "filter": [
          "standard",
          "lowercase",
          "asciifolding",
          "content_stemmer",
          "delimiter_filter"
        ],
        "type": "custom",
        "tokenizer": "standard"
      },
      "partial_content": {
        "filter": [
          "standard",
          "lowercase",
          "asciifolding",
          "content_ngrams",
          "delimiter_filter"
        ],
        "type": "custom",
        "tokenizer": "standard"
      },
      "comma_analyzer": {
         "type": "pattern",
         "pattern":","
      }      
    }
  }
}
